  
<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-3">
    <div class="row">
        <div class="col-6 offset-md-3 col-xl-6 ">
            <div class="card shadow">
                <img src="https://i.pinimg.com/originals/5e/44/df/5e44df81cb2bdde904187c8e16a4175b.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <br>
                        <div class="d-grid mb-3">              
                            <button class="btn btn-success">Login</button>            
                        </div>                    </form>
                </div>
            </div>
        </div>
    </div>
</div>